<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>


    <root level="info" additivity="false">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="edu.clemson.openflow.sos" level="info"/>
    <logger name="edu.clemson.openflow.sos.buf" level="info"/>
    <logger name="edu.clemson.openflow.sos.agent.netty.AgentServer" level="debug" />
    <logger name="edu.clemson.openflow.sos.buf.Multiplexer" level="debug"/>


</configuration>